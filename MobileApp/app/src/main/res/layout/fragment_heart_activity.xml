<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="170dp"
            android:layout_height="220dp"
            android:layout_marginEnd="12dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="@dimen/material_card_view_corner_radius"
            android:elevation="@dimen/material_card_view_elevation"
            app:cardElevation="@dimen/material_card_view_card_elevation"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="30dp"
                android:background="#0974A6"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="113"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_gravity="start"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/roboto_medium"
                    android:text="BP"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="65dp"
                    android:src="@drawable/ic_heart_rate" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heart Rate"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="170dp"
            android:layout_height="220dp"
            android:layout_marginStart="12dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="@dimen/material_card_view_corner_radius"
            android:elevation="@dimen/material_card_view_elevation"
            app:cardElevation="@dimen/material_card_view_card_elevation"
            >
            <LinearLayout
                android:id="@+id/ll_heatActivity_frag_blood_pressure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="30dp"
                android:background="#0974A6"
                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="113"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_gravity="start"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mmHG"
                    android:textSize="10sp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_gravity="start"
                    android:textColor="@color/white"
                    />
                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="65dp"
                    android:src="@drawable/ic_blood_pressure"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blood Pressure"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="170dp"
            android:layout_height="220dp"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="@dimen/material_card_view_corner_radius"
            android:elevation="@dimen/material_card_view_elevation"
            app:cardElevation="@dimen/material_card_view_card_elevation"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="30dp"
                android:background="#16ABD0"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="113"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_gravity="start"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â°F"
                    android:textSize="10sp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_gravity="start"
                    android:textColor="@color/white"
                    />

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="65dp"
                    android:src="@drawable/ic_body_temperature" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Body Temperature"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="170dp"
            android:layout_height="220dp"
            android:layout_marginStart="12dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="@dimen/material_card_view_corner_radius"
            android:elevation="@dimen/material_card_view_elevation"
            app:cardElevation="@dimen/material_card_view_card_elevation"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="30dp"
                android:background="#0F4C82"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="113"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_gravity="start"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BPM"
                    android:textSize="10sp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_gravity="start"
                    android:textColor="@color/white"
                    />
                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="65dp"
                    android:src="@drawable/ic_oxygen_saturation"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oxygen Saturation"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</LinearLayout>
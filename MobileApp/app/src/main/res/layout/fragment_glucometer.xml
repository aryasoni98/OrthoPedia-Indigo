<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="@dimen/material_card_view_corner_radius"
        android:elevation="@dimen/material_card_view_elevation"
        app:cardElevation="@dimen/material_card_view_card_elevation"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/card_view_background_white"
            >

            <com.robinhood.ticker.TickerView
                android:id="@+id/ticker_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5.9"
                android:textColor="#F5DF4D"
                android:textSize="80sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mmol/L"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:textColor="#A09898"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                >
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fragment_glucometer_waves_2" />
                <TextView
                    android:id="@+id/textView3"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center|top"
                    android:text="High"
                    android:fontFamily="@font/roboto_bold"
                    android:textAlignment="center"
                    android:textColor="@color/text_color_blue"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fragment_glucometer_waves_1" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="@dimen/material_card_view_corner_radius"
        android:elevation="@dimen/material_card_view_elevation"
        app:cardElevation="@dimen/material_card_view_card_elevation"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/card_view_background_white"
            >

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/material_card_view_corner_radius"
                android:elevation="@dimen/material_card_view_elevation"
                app:cardElevation="@dimen/material_card_view_card_elevation"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                >
                <LinearLayout
                    android:id="@+id/ll_glucometer_fragment_bydate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/colorSecondary"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_drop"
                        android:layout_marginEnd="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="by date"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/white"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_by_date"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="@dimen/material_card_view_corner_radius"
                android:elevation="@dimen/material_card_view_elevation"
                app:cardElevation="@dimen/material_card_view_card_elevation"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                >
                <LinearLayout
                    android:id="@+id/ll_glucometer_fragment_byTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/colorPrimary"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_drop"
                        android:layout_marginEnd="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="by Time"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/white"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_by_date_2"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#DEDEDE"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/ic_fragment_glucometer_average"
                        android:padding="10dp"
                        android:background="@drawable/background_oval_color_primary_thin_stroke"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5.6"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_marginEnd="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/text_color_blue"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="mmol/L"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/text_color_blue"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Average"
                            android:fontFamily="@font/roboto_medium"
                            android:layout_marginTop="10dp"
                            android:textSize="17sp"
                            android:gravity="start"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center|start"
                            android:textColor="@color/text_color_blue"/>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/view_line_separator_grey"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/ic_fragment_glucometer_hba1c"
                        android:padding="10dp"
                        android:outlineSpotShadowColor="@color/colorSecondary"
                        android:background="@drawable/background_oval_color_primary_thin_stroke"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6.0"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_marginEnd="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/text_color_blue"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="mmol/L"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/text_color_blue"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HbA1c"
                            android:fontFamily="@font/roboto_medium"
                            android:layout_marginTop="10dp"
                            android:textSize="17sp"
                            android:gravity="start"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center|start"
                            android:textColor="@color/text_color_blue"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
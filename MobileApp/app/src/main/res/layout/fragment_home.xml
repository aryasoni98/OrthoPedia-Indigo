<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="@dimen/material_card_view_elevation"
            app:cardCornerRadius="@dimen/material_card_view_corner_radius"
            app:cardElevation="@dimen/material_card_view_card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/card_view_background_white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/linear_layout_date_status_padding">

                <LinearLayout
                    android:layout_width="@dimen/linear_layout_date_status_layout_width"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/linear_layout_date_status_margin_start_end"
                    android:layout_marginTop="@dimen/linear_layout_date_status_margin_top_bottom"
                    android:layout_marginEnd="@dimen/linear_layout_date_status_margin_start_end"
                    android:layout_marginBottom="@dimen/linear_layout_date_status_margin_top_bottom"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_frag_home_date_color_1"
                        android:layout_width="@dimen/date_status_height_width"
                        android:layout_height="@dimen/date_status_height_width"
                        android:layout_marginTop="@dimen/date_status_margin_top"
                        android:background="@color/teal_200" />

                    <TextView
                        android:id="@+id/tv_frag_home_date_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/day_margin_top"
                        android:fontFamily="@font/roboto_condensed"
                        android:gravity="center"
                        android:textColor="@color/text_color_normal"
                        android:textSize="@dimen/text_size_date" />

                    <TextView
                        android:id="@+id/tv_frag_home_day_of_the_week_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/day_margin_top"
                        android:fontFamily="@font/roboto_bold_condensed"
                        android:gravity="center"
                        android:textColor="@color/text_color_normal"
                        android:textSize="@dimen/text_size_day_of_the_week" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/linear_layout_date_status_layout_width"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/linear_layout_date_status_margin_start_end"
                    android:layout_marginTop="@dimen/linear_layout_date_status_margin_top_bottom"
                    android:layout_marginEnd="@dimen/linear_layout_date_status_margin_start_end"
                    android:layout_marginBottom="@dimen/linear_layout_date_status_margin_top_bottom"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_frag_home_date_color_2"
                        android:layout_width="@dimen/date_status_height_width"
                        android:layout_height="@dimen/date_status_height_width"
                        android:layout_marginTop="@dimen/date_status_margin_top"
                        android:background="@color/teal_200" />

                    <TextView
                        android:id="@+id/tv_frag_home_date_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/day_margin_top"
                        android:fontFamily="@font/roboto_condensed"
                        android:gravity="center"
                        android:textColor="@color/text_color_normal"
                        android:textSize="@dimen/text_size_date" />

                    <TextView
                        android:id="@+id/tv_frag_home_day_of_the_week_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/day_margin_top"
                        android:fontFamily="@font/roboto_bold_condensed"
                        android:gravity="center"
                        android:textColor="@color/text_color_normal"
                        android:textSize="@dimen/text_size_day_of_the_week" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/linear_layout_date_status_layout_width"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/linear_layout_date_status_margin_start_end"
                    android:layout_marginTop="@dimen/linear_layout_date_status_margin_top_bottom"
                    android:layout_marginEnd="@dimen/linear_layout_date_status_margin_start_end"
                    android:layout_marginBottom="@dimen/linear_layout_date_status_margin_top_bottom"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_frag_home_date_color_3"
                        android:layout_width="@dimen/date_status_height_width"
                        android:layout_height="@dimen/date_status_height_width"
                        android:layout_marginTop="@dimen/date_status_margin_top"
                        android:background="@color/teal_200" />

                    <TextView
                        android:id="@+id/tv_frag_home_date_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/day_margin_top"
                        android:fontFamily="@font/roboto_condensed"
                        android:gravity="center"
                        android:textColor="@color/text_color_normal"
                        android:textSize="@dimen/text_size_date" />

                    <TextView
                        android:id="@+id/tv_frag_home_day_of_the_week_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/day_margin_top"
                        android:fontFamily="@font/roboto_bold_condensed"
                        android:gravity="center"
                        android:textColor="@color/text_color_normal"
                        android:textSize="@dimen/text_size_day_of_the_week" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/linear_layout_date_status_layout_width"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/linear_layout_date_status_margin_start_end"
                    android:layout_marginTop="@dimen/linear_layout_date_status_margin_top_bottom"
                    android:layout_marginEnd="@dimen/linear_layout_date_status_margin_start_end"
                    android:layout_marginBottom="@dimen/linear_layout_date_status_margin_top_bottom"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_frag_home_date_color_4"
                        android:layout_width="@dimen/date_status_height_width"
                        android:layout_height="@dimen/date_status_height_width"
                        android:layout_marginTop="@dimen/date_status_margin_top"
                        android:background="@color/teal_200" />

                    <TextView
                        android:id="@+id/tv_frag_home_date_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/day_margin_top"
                        android:fontFamily="@font/roboto_condensed"
                        android:gravity="center"
                        android:textColor="@color/text_color_normal"
                        android:textSize="@dimen/text_size_date" />

                    <TextView
                        android:id="@+id/tv_frag_home_day_of_the_week_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/day_margin_top"
                        android:fontFamily="@font/roboto_bold_condensed"
                        android:gravity="center"
                        android:textColor="@color/text_color_normal"
                        android:textSize="@dimen/text_size_day_of_the_week" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/linear_layout_date_status_layout_width"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/linear_layout_date_status_margin_start_end"
                    android:layout_marginTop="@dimen/linear_layout_date_status_margin_top_bottom"
                    android:layout_marginEnd="@dimen/linear_layout_date_status_margin_start_end"
                    android:layout_marginBottom="@dimen/linear_layout_date_status_margin_top_bottom"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_frag_home_date_color_5"
                        android:layout_width="@dimen/date_status_height_width"
                        android:layout_height="@dimen/date_status_height_width"
                        android:layout_marginTop="@dimen/date_status_margin_top"
                        android:background="@color/colorSecondary" />

                    <TextView
                        android:id="@+id/tv_frag_home_date_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/date_status_active_margin_top"
                        android:fontFamily="@font/roboto_condensed"
                        android:gravity="center"
                        android:textColor="@color/colorSecondary"
                        android:textSize="@dimen/date_status_active_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/linear_layout_date_status_layout_width"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/linear_layout_date_status_margin_start_end"
                    android:layout_marginTop="@dimen/linear_layout_date_status_margin_top_bottom"
                    android:layout_marginEnd="@dimen/linear_layout_date_status_margin_start_end"
                    android:layout_marginBottom="@dimen/linear_layout_date_status_margin_top_bottom"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_frag_home_date_color_6"
                        android:layout_width="@dimen/date_status_height_width"
                        android:layout_height="@dimen/date_status_height_width"
                        android:layout_marginTop="@dimen/date_status_margin_top"
                        android:background="@color/teal_200" />

                    <TextView
                        android:id="@+id/tv_frag_home_date_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/day_margin_top"
                        android:fontFamily="@font/roboto_condensed"
                        android:gravity="center"
                        android:textColor="@color/text_color_normal"
                        android:textSize="@dimen/text_size_date" />

                    <TextView
                        android:id="@+id/tv_frag_home_day_of_the_week_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/day_margin_top"
                        android:fontFamily="@font/roboto_bold_condensed"
                        android:gravity="center"
                        android:textColor="@color/text_color_normal"
                        android:textSize="@dimen/text_size_day_of_the_week" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/linear_layout_date_status_layout_width"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/linear_layout_date_status_margin_start_end"
                    android:layout_marginTop="@dimen/linear_layout_date_status_margin_top_bottom"
                    android:layout_marginEnd="@dimen/linear_layout_date_status_margin_start_end"
                    android:layout_marginBottom="@dimen/linear_layout_date_status_margin_top_bottom"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_frag_home_date_color_7"
                        android:layout_width="@dimen/date_status_height_width"
                        android:layout_height="@dimen/date_status_height_width"
                        android:layout_marginTop="@dimen/date_status_margin_top"
                        android:background="@color/teal_200" />

                    <TextView
                        android:id="@+id/tv_frag_home_date_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/day_margin_top"
                        android:fontFamily="@font/roboto_condensed"
                        android:gravity="center"
                        android:textColor="@color/text_color_normal"
                        android:textSize="@dimen/text_size_date" />

                    <TextView
                        android:id="@+id/tv_frag_home_day_of_the_week_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/day_margin_top"
                        android:fontFamily="@font/roboto_bold_condensed"
                        android:gravity="center"
                        android:textColor="@color/text_color_normal"
                        android:textSize="@dimen/text_size_day_of_the_week" />
                </LinearLayout>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="#1C2754"
            app:cardCornerRadius="@dimen/material_card_view_corner_radius"
            android:elevation="@dimen/material_card_view_elevation"
            app:cardElevation="@dimen/material_card_view_card_elevation"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="false"
                android:background="@drawable/background_center_gradient_yellow"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_frag_home_happy_face"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:background="@drawable/background_oval_color_primary"
                    android:padding="15dp"
                    android:src="@drawable/ic_happy"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="@string/good_job"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorSecondary"
                    android:textSize="@dimen/text_size_heading"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_frag_home_happy_face" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="@dimen/material_card_view_corner_radius"
            android:elevation="@dimen/material_card_view_elevation"
            app:cardElevation="@dimen/material_card_view_card_elevation"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_view_background_white"
                android:gravity="center"
                android:padding="5dp"
                android:elevation="@dimen/material_card_view_card_elevation"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_home_fragment_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:elevation="@dimen/material_card_view_card_elevation"
                    android:focusable="true">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_footsteps"
                            android:layout_centerInParent="true" />

                        <ProgressBar
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:indeterminate="false"
                            android:progressDrawable="@drawable/circular_progress_bar_activity"
                            android:background="@drawable/circle_shape"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:max="100"
                            android:progress="65"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.5hrs"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/text_color_blue"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activity"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/text_color_normal"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_home_fragment_live_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_live_temperature"
                            android:layout_centerInParent="true" />

                        <ProgressBar
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:indeterminate="false"
                            android:progressDrawable="@drawable/circular_progress_bar_live_temperature"
                            android:background="@drawable/circle_shape"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:max="100"
                            android:progress="65"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Live"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/text_color_blue"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/text_color_normal"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_home_fragment_socks"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_socks"
                            android:layout_centerInParent="true" />

                        <ProgressBar
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:indeterminate="false"
                            android:progressDrawable="@drawable/circular_progress_bar_socks_pairing"
                            android:background="@drawable/circle_shape"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:max="100"
                            android:progress="65"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Socks"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/text_color_blue"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pairing"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/text_color_normal"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
